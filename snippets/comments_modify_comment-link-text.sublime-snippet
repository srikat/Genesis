// Modify the comment link text in comments
add_filter( 'genesis_post_info', '${4:sp_post_info_filter}' );
function ${4:sp_post_info_filter}( \$post_info ) {
	return '[post_comments zero="${1:Leave a Comment}" one="${2:1 Comment}" more="${3:% Comments}"]';
}
